{
    "name": "merklekv/client",
    "description": "Official PHP client library for MerkleKV distributed key-value store",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "AI-Decenter",
            "email": "contact@ai-decenter.com"
        }
    ],
    "homepage": "https://github.com/AI-Decenter/MerkleKV",
    "support": {
        "issues": "https://github.com/AI-Decenter/MerkleKV/issues",
        "source": "https://github.com/AI-Decenter/MerkleKV"
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "MerkleKV\\": "src/"
        },
        "files": [
            "src/Exceptions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MerkleKV\\Tests\\": "tests/"
        }
    },
    "keywords": [
        "merkle",
        "key-value",
        "distributed",
        "database",
        "nosql",
        "tcp"
    ],
    "scripts": {
        "test": "phpunit",
        "test-integration": "phpunit --group=integration",
        "phpstan": "phpstan analyse src tests --level=max",
        "cs-fix": "phpcbf",
        "cs-check": "phpcs"
    }
}
